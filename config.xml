    <icon src="icons_akhb/icon-small@3x.png" gap:platform="ios" width="87" height="87" />

    <!-- Spotlight Icon -->
    <icon src="icons_akhb/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="icons_akhb/icon-40@2x.png" gap:platform="ios" width="80" height="80" />

    <!-- iPhone / iPod Touch -->
    <icon src="icons_akhb/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icons_akhb/icon@2x.png" gap:platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="icons_akhb/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons_akhb/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

    <!-- iPhone Spotlight and Settings Icon -->    
    <icon src="icons_akhb/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icons_akhb/icon-small@2x.png" gap:platform="ios" width="58" height="58" />
    <icon src="icons_akhb/icon-40@3x.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad Spotlight and Settings Icon -->
    <icon src="icons_akhb/icon-Small-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="icons_akhb/icon-Small-50@2x.png" gap:platform="ios" width="100" height="100" />
    <icon src="icons_akhb/icon-83.5@2x.png" gap:platform="ios" width="167" height="167" />

    <content src="index.html" />
    <preference name="permissions" value="none" />
    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/notification" />
    
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="WebViewBounce" value="false" /> 	
    <preference name="prerendered-icon" value="false" /> 	
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="lightcontent" /> 
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="KeepRunning" value="true"/>
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
	<preference name="android-build-tool" value="gradle" />
	
