<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.iiuk.myakhbDev"
        versionCode = "13" 
        version     = "1.0.3" >

    <name>myAKHB_Dev</name>

    <description>
        Developed by Ismaili Council for the UK
    </description>

    <author href="http://www.iiuk.org" email="iiukadmin@iiuk.org">
        Ismaili Council for the UK
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/network" />
    
    <preference name="target-device" value="universal" />
    <preference name="Fullscreen" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="WebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="portrait"/>

    <feature name="debug-server" required="true">
       <param name="domain" value="http://192.168.191.1:8080"/>
       <param name="key" value="anonymous"/>
    </feature>
    
    <gap:platform name="ios" />
    <gap:platform name="android" />

    <gap:splash src="splash.png" />

    <gap:splash src="icons/Default.png"         gap:platform="ios" width="320" height="480" />
    <gap:splash src="icons/Default@2x.png"      gap:platform="ios" width="640" height="960" />
    <gap:splash src="icons/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

    <!-- iPhone 6 / 6+ -->
    <icon src="icons/icon-60@3x.png" gap:platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="icons/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="icons/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icons/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icons/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="icons/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icons/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="icons/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="icons/icon-40@2x.png" gap:platform="ios" width="80" height="80" />

    <!-- iPhone / iPod Touch -->
    <icon src="icons/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icons/icon@2x.png" gap:platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="icons/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

    <!-- iPhone Spotlight and Settings Icon -->    
    <icon src="icons/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icons/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- iPad Spotlight and Settings Icon -->
    <icon src="icons/icon-Small-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="icons/icon-Small-50@2x.png" gap:platform="ios" width="100" height="100" />


    <icon src="icon.png" />

     <platform name="android">
              <icon src="ldpi.png" density="ldpi" />
              <icon src="mdpi.png" density="mdpi" />
              <icon src="hdpi.png" density="hdpi" />
              <icon src="xhdpi.png" density="xhdpi" />
              <icon src="xxhdpi.png" density="xxhdpi" />
              <icon src="xxxhdpi.png" density="xxxhdpi" />
     </platform>


    <gap:plugin name="org.apache.cordova.device"/>
    <gap:plugin name="org.apache.cordova.splashscreen"/>
    <gap:plugin name="org.apache.cordova.dialogs"/>
    <gap:plugin name="org.apache.cordova.network-information"/>
    <gap:plugin name="org.apache.cordova.inappbrowser"/>
    <gap:plugin name="de.appplant.cordova.plugin.email-composer"/>
    <gap:plugin name="net.bgta.phonegap.plugin.appversion" version="1.1.1" />
    <gap:plugin name="com.phonegap.plugins.pushplugin" version="2.4.0" />

    <plugin name="InAppBrowser" value="CDVInAppBrowser" />
    <plugin name="EmailComposer" value="APPEmailComposer" />
    <access origin="*"/>
</widget>